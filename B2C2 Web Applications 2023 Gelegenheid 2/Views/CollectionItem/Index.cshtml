@model  IEnumerable<CollectionItem>
@{
    ViewData["Title"] = "All items";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">All items in every collection</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CollectionItem" asp-action="Create" class="btn btn-primary">
                Add new item
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Time Online
            </th>
            <th>
                Collection
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="15%">
                    @obj.Name
                </td>
                <td width="40%">
                    @obj.Description
                </td>
                <td width="5%">
                    € @obj.Price
                </td>
                <td width="15%">
                    @obj.CreationTime
                </td>
                <td width="15%">
                    @obj.CollectionName.Name
                </td>
                <td>
                    <div class="w-75" btn-group role="group">
                        <a asp-controller="CollectionItem" asp-action="edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><img src="icons/pencil-square.svg" alt="edit">Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75" btn-group role="group">
                        <a asp-controller="CollectionItem" asp-action="delete" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><img src="icons/trashcan.svg" alt="delete">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>