@model  IEnumerable<CollectionItem>
@{
    ViewData["Title"] = "Index";
}

<h1>Index CollectionItem</h1>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Collection Items</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CollectionItem" asp-action="Create" class="btn btn-primary">
                Add new item
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Naam
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Time Online
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.Description
                </td>
                <td width="25%">
                    @obj.Price
                </td>
                <td width="25%">
                    @obj.TimeOnline
                </td>
            </tr>
        }
    </tbody>
</table>

