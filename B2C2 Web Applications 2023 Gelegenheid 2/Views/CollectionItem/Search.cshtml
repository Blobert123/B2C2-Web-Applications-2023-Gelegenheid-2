@model IEnumerable<CollectionItem>

@{
    ViewData["Title"] = "Search results for " + ViewBag.SearchTerm;
}

<h2>Search Results for: @ViewBag.SearchTerm</h2>


@if (ViewBag.NoResults)
{
    <p>No items contain the search term : @ViewBag.SearchTerm</p>
}
else
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Naam
                </th>
                <th>
                    Description
                </th>
                <th>
                    Price
                </th>
                <th>
                    Time Online
                </th>
                <th>
                    Collection
                </th>
                <th>
                    Release Date
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.Name
                    </td>
                    <td width="38%">
                        @obj.Description
                    </td>
                    <td width="7%">
                        € @obj.Price
                    </td>
                    <td width="15%">
                        @obj.CreationTime
                    </td>
                    <td width="10%">
                        @obj.CollectionName.Name
                    </td>
                    <td width="15%">
                        @obj.ReleaseDate.ToString("dd-MM-yyyy")
                    </td>
                </tr>
            }
        </tbody>
    </table>
}