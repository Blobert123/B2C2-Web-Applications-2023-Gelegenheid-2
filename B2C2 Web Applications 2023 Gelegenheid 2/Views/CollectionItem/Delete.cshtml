@model CollectionItem

<form method="post" asp-action="Delete">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Item</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" disabled class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="Description">Description</label>
			<input asp-for="Description" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Price">Price</label>
			<input asp-for="Price" disabled class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="CollectionName">CollectionName</label>
			<input asp-for="CollectionName" disabled class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
		<a asp-controller="CollectionItem" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
	</div>
</form>