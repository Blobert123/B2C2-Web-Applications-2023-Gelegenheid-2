@model CollectionName

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Collection</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="Description">Description</label>
			<input asp-for="Description" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="AdminId" class="control-label"></label>
			<select asp-for="AdminId" asp-items="@ViewBag.Admins" class="form-control"></select>
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
		<a href="javascript:void(0);" onclick="goBack()" class="btn btn-secondary" style="width: 150px">Back</a>
	</div>
</form>

<script>
	function goBack() {
		window.history.back();
	}
</script>