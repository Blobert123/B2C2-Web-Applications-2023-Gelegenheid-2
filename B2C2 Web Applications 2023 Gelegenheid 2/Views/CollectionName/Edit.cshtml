@model CollectionName

<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Collection</h2>
		</div>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" class="form-control"/>
		</div>
		<div class="mb-3">
			<label asp-for="Description">Description</label>
			<input asp-for="Description" class="form-control" />
		</div>
		<div class="mb-3">
			<label asp-for="Admin">Admin</label>
			<input asp-for="Admin" class="form-control" />
		</div>
		<button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
		<a asp-controller="CollectionName" asp-action="Index" class="btn btn-secondary" style="width:150px">Back</a>
	</div>
</form>